{
  "servicenow": {
    "instance_url": "${SERVICENOW_INSTANCE_URL}",
    "table": "incident",
    "incident_id_field": "u_incident_io_id",
    "auth": {
      "type": "basic",
      "username": "${SERVICENOW_USERNAME}",
      "password": "${SERVICENOW_PASSWORD}"
    },
    "api_timeout": 30000,
    "retry_attempts": 3,
    "retry_delay": 1000
  },
  "incident_io": {
    "api_url": "https://api.incident.io/v2",
    "api_key": "${INCIDENT_IO_API_KEY}",
    "api_timeout": 30000,
    "retry_attempts": 3,
    "retry_delay": 1000,
    "servicenow_link_field_id": "${SERVICENOW_LINK_FIELD_ID}",
    "servicenow_instance_url": "${SERVICENOW_INSTANCE_URL}"
  },
  "webhook": {
    "port": "${PORT}",
    "path": "/webhook",
    "verify_signature": "${WEBHOOK_VERIFY_SIGNATURE}",
    "secret": "${WEBHOOK_SECRET}"
  },
  "servicenow_webhook": {
    "verify_signature": "${SERVICENOW_WEBHOOK_VERIFY_SIGNATURE}",
    "secret": "${SERVICENOW_WEBHOOK_SECRET}"
  },
  "logging": {
    "level": "${LOG_LEVEL}",
    "format": "json",
    "file": "logs/app.log"
  },
  "features": {
    "create_incidents": true,
    "update_incidents": true,
    "deduplicate_work_notes": true,
    "sync_attachments": false,
    "reverse_sync": true,
    "sync_status": true,
    "sync_severity": true,
    "add_servicenow_link": false,
    "enable_manual_sync_endpoints": false
  },
  "performance": {
    "concurrent_requests": 5,
    "batch_size": 10,
    "rate_limit": {
      "requests_per_minute": 60
    }
  }
}